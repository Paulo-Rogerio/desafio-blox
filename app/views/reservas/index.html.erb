<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Evento</th>
      <th>Inicio</th>
      <th>Termino</th>
      <th>Sala</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.evento %></td>
        <td><%= reserva.inicio.strftime('%H:%M') %></td>
        <td><%= reserva.termino.strftime('%H:%M') %></td>
        <td><%= reserva.sala.descricao %></td>
        <td><%= reserva.user.email %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

